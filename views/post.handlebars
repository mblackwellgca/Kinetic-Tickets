<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{post.user.name}} on {{format_date post.date_created}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add a Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>

<script src="/javascript/comment.js"></script>