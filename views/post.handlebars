<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>{{id}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


<section class="card">
    <div class="card-header">
        <h3>Comments</h3>
    </div>

    <div class="card-body">
        {{#each comments as |comment|}}
            <div class="row mb-4 post">
                 <div class="col-md-5">
                    <p>
                        {{body}}
                    </p>
                    <p>
                        &mdash; {{post.user.name}} on {{format_date post.date_created}}
                    </p>
                </div>
            </div>
        {{/each}}
    </div>
</section>


    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add a Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{id}}">

            <label class="form-label" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>

<script src="../js/comment.js"></script>