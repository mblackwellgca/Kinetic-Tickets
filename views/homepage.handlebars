<html lang="en">
<head>
    <!-- <meta> tags> -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Kinetic Tickets</title>
</head>

<body>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Welcome To Kinetic Tickets!</h1>
    <p class="lead">You can view total tickets responded to by our team below {{{get_emoji}}}</p>
  </div>
</div>

<div>
  <canvas id="myChart"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
const data = {
  labels: [
    'Total Unanswered Tickets',
    'Total Answered Tickets',
  ],
  datasets: [{
    label: 'Ticket Response',
    data: [10,3],
    backgroundColor: [
      'rgb(48, 71, 94)',
      'rgb(240, 84, 84)',
    ],
    hoverOffset: 8
  }]
};

const config = {
  type: 'doughnut',
  data: data,
};
</script>
<script>
  const myChart = new Chart(
    document.getElementById('myChart'),
    config
  );
</script>
</body>
</html>